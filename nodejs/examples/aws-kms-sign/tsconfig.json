{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "ES2023",
      "ESNext.Disposable"
    ],
    "module": "commonjs",
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "target": "ES2023",
    "types": [
      "node"
    ],
    "outDir": "dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
